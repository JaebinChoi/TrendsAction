<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.trend.repository.CommentRepository">
	
	<!-- 해당 트렌드의 댓글 리스트 조회 -->
	<select id="readByTrendId" resultType="Comment">
		select *
		from comment
		where trend_id=#{trendId}
	</select>
	
</mapper>