<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.trend.repository.CommentRepository">
	
	<!-- 해당 트렌드의 댓글 리스트 조회 -->
	<select id="readByTrendId" resultType="Comment">
		select *
		from comment
		where trend_id=#{trendId}
	</select>
	
	<!-- 해당 트렌드에 댓글 삽입 -->
	<insert id="insert">
		insert into comment(user_id, trend_id, content, date)
		values(#{userId}, #{trendId}, #{content}, #{date})
	</insert>
	
	<!-- 해당 트렌드의 댓글 수정 -->
	<update id="update">
		update comment
		set content=#{content}, date=#{date}
		where id=#{id}
	</update>
	
	<!-- 해당 트렌드의 댓글 삭제  -->
	<delete id="delete">
		delete from comment
		where id=#{id}
	</delete>
	
</mapper>