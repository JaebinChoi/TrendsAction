<?xml version="1.0" encoding="UTF-8"?>
<!-- mappers/gueset.xml -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mappers/user.xml -->
<mapper namespace="com.ssafy.user.repository.UserRepository"> <!-- mybatis는 namespace필수!! -->

	<!-- 닉네임 중복 확인 -->
	<select id="checknickname" resultType="int">
		select EXISTS (select * from user where nickname=#{nickname})
	</select>
	
	<!-- 유저정보 확인 -->
	<select id="detail" resultType="User">
		select *
		from user
		where id = #{userId}
	</select>
	
	<!-- 유저정보 수정 -->
	<update id="update">
		update user
		set nickname = #{nickname},
			profile = #{profile}
		where id = #{id}
	</update>
	
	<!-- 유저정보 삭제 -->
	<delete id="delete">
		delete 
		  from user 
		 where id = #{userId}
	</delete>
	
</mapper>